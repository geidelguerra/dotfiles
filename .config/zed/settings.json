// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "lsp": {
        "vtsls": {
            "settings": {
                "typescript": {
                    "updateImportsOnFileMove": {
                        "enabled": "always"
                    }
                },
                "javascript": {
                    "updateImportsOnFileMove": {
                        "enabled": "always"
                    }
                }
            },
            "enable_lsp_tasks": true
        }
    },
    "use_smartcase_search": true,
    "search": {
        "case_sensitive": true
    },
    "prettier": {
        "allowed": true
    },
    "edit_predictions": {
        "disabled_globs": [".env*", ".git/", "*_templ.go"],
        "mode": "eager",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null,
            "enterprise_uri": null
        },
        "enabled_in_text_threads": false
    },
    "show_edit_predictions": true,
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "agent": {
        "default_profile": "minimal",
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "gpt-4o"
        },
        "play_sound_when_agent_done": true,
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4o"
        }
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "ui_font_size": 18,
    "ui_font_family": ".ZedMono",
    "buffer_font_size": 20.0,
    "theme": {
        "mode": "dark",
        "light": "One Light",
        "dark": "Ayu Dark"
    },
    "tab_size": 4,
    "indent_guides": {
        "enabled": true
    },
    "soft_wrap": "none",
    "format_on_save": "off",
    "project_panel": {
        "auto_fold_dirs": false,
        "dock": "right"
    },
    "show_whitespaces": "all",
    "languages": {
        "Templ": {
            "formatter": {
                "external": {
                    "command": "templ",
                    "arguments": ["fmt", "-stdin-filepath", "{buffer_path}"]
                }
            },
            "format_on_save": "on"
        },
        "Go": {
            "formatter": {
                "external": {
                    "command": "gofmt",
                    "arguments": []
                }
            }
        },
        "TypeScript": {
            "formatter": "prettier",
            "prettier": {
                "enabled": true,
                "config_file": ".prettierrc.json"
            }
        }
    },
    "max_tabs": 4,
    "show_wrap_guides": true,
    "preferred_line_length": 200
}
