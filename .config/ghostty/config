theme = Afterglow

font-family = 0xProto Nerd Font
font-size = 16

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-save-state = always

shell-integration = zsh

fullscreen = true

keybind = ctrl+a>c=new_tab
keybind = shift+left=previous_tab
keybind = shift+right=next_tab
keybind = ctrl+a>n=new_window
keybind = ctrl+a>h=new_split:down
keybind = ctrl+a>v=new_split:right

keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom
keybind = ctrl+a>z=toggle_split_zoom
